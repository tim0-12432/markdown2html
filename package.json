{
  "name": "markdown2html",
  "version": "0.1.4",
  "private": true,
  "author": "tim0-12432",
  "main": "public/main.js",
  "homepage": "https://tim0-12432.github.io/markdown2html",
  "dependencies": {
    "@electron/remote": "^1.2.0",
    "@material-ui/core": "^4.11.4",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "*",
    "@material-ui/types": "^5.1.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^26.0.23",
    "@types/node": "^12.20.15",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.7",
    "clsx": "^1.1.1",
    "electron-is-dev": "^2.0.0",
    "flexlayout-react": "^0.5.12",
    "gh-pages": "^3.2.3",
    "highlight.js": "^11.0.1",
    "html-react-parser": "^1.2.6",
    "marked": "^2.1.1",
    "material-ui-color-picker": "^3.5.1",
    "npm": "^7.18.0",
    "react": "^17.0.2",
    "react-codemirror": "^1.0.0",
    "react-codemirror2": "^7.2.1",
    "react-dom": "^17.0.2",
    "react-reflex": "^4.0.1",
    "react-scripts": "4.0.3",
    "react-share": "^4.4.0",
    "typescript": "^4.3.4",
    "web-vitals": "^1.1.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "lint": "node_modules/.bin/eslint --ext=js --ext=ts --ext=jsx --ext=tsx .",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none npm start\" \"npm run electron:start\"",
    "electron:build": "npm run build && electron-builder -c.extraMetadata.main=build/main.js",
    "electron:start": "wait-on tcp:3000 && electron ."
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/marked": "^2.0.3",
    "@types/react-codemirror": "^1.0.4",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "electron": "^13.1.2",
    "electron-builder": "^22.11.7",
    "prettier": "^2.3.1",
    "wait-on": "^5.3.0"
  },
  "build": {
    "appId": "com.tim0-12432.markdown2html",
    "productName": "Markdown2Html",
    "copyright": "Copyright Â© 2021 ${author}",
    "extends": null,
    "publish": {
      "provider": "github",
      "repo": "html2markdown",
      "owner": "tim0-12432",
      "releaseType": "release"
    },
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "icon": "./public/images/android-chrome-512x512.png"
    },
    "linux": {
      "target": "AppImage",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "icon": "./public/images/android-chrome-512x512.png",
      "category": "Development"
    },
    "files": [
      "./build/**/*",
      "./dist/**/*",
      "./node_modules/**/*",
      "./public/**/*",
      "*.js"
    ],
    "directories": {
      "buildResources": "public"
    }
  }
}
